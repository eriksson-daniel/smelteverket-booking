{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ],
  "compilerOptions": {
    "lib": [
      "ES2022", "DOM"
    ],
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "module": "commonjs",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "outDir": "dist",
    "skipLibCheck": true
  }
}